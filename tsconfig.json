{
    "compilerOptions": {
      "module": "commonjs",
      
      "target": "ES2019",
      "moduleResolution": "node",
      "lib": ["ESNext", "DOM"],
      "noEmitOnError": true,
      "removeComments": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "strict": true,    
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true      
    },
    "include": [
        "./src"
    ]
    
  }